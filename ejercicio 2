#include <stdio.h>
int main ()
    {
    char op = 'n';
    double sum = 0, calif = 0; int veces = 0;
    do
    {
        printf("\tSuma de calificaciones\n"); printf("Ingrese la calificación:\n"); scanf("%lf", &calif);
        veces++;
        sum = sum + calif;
        printf("¿Desea sumar otra? SS/NN\n");
        setbuf(stdin, NULL);
        getchar();
    }
    while (op == 'S' || op == 's');
    printf("El promedio de las calificaciones ingresadas es: %lf\n", sum/veces); 
    return 0;
}
